include ../radio-button/radio-button.pug
include ../toggle-button/toggle-button.pug
include ../button/button.pug
include ../title/title.pug
include ../text-input/text-input.pug

mixin registration-form({ action="/mock-address/change-me", name="registration-form", method="post", } = {} )
  form.registration-form(action=action name=name method=method)
    .registration-form__wrapper
      .registration-form__title
        +title({ tag: "h1", text: "Регистрация аккаунта", })

      .registration-form__first-name
        +text-input({
          type: "text",
          name: "first-name",
          placeholder: "Имя",
        })

      .registration-form__second-name
        +text-input({
          type: "text",
          name: "second-name",
          placeholder: "Фамилия",
        })

      .registration-form__radio-buttons
        .registration-form__radio-button
          +radio-button({ name:"gender", value:"man", text:"Мужчина", isChecked:"true", })

        .registration-form__radio-button
          +radio-button({ name:"gender", value:"woman", text:"Женщина", })

      .registration-form__birthday-title
        +title({ tag: "h3", text: "Дата рождения", })
      
      .registration-form__birthday
        +text-input({
          placeholder: "ДД.ММ.ГГГГ",
          isMasked: true,
        })

      .registration-form__login-data-title
        +title({ tag: "h3", text: "Данные для входа в сервис", })

      .registration-form__email
        +text-input({
          type: "email",
          name: "email",
          placeholder: "Email",
        })

      .registration-form__password
        +text-input({
          type: "password",
          name: "password",
          placeholder: "Пароль",
        })

      .registration-form__toggle-button
        +toggle-button({ name: "toggle", text: "Получать спецпредложения", })

      .registration-form__button
        +button({ 
          text: "Перейти к оплате",
          buttonType: "submit",
          style: "long",
        })   

      .registration-form__login
        p.registration-form__login-text Уже есть аккаунт на Toxin

        +button({ 
          href:"/mock-address/change-me", 
          text: "Войти", 
          style: "faint",
        })