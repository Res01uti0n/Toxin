include ../title/title.pug
include ../filter-date/filter-date.pug
include ../dropdown/dropdown.pug
include ../button/button.pug

mixin filter({ name="filter", action="/mock-address/change-me", method="get", } = {})
  form.filter(name=name action=action method=method)
    .filter__wrapper
      .filter__title
        +title({ tag: "h1", text: "Найдём номера под ваши пожелания", })

      .filter__dropdown-date
        +filter-date({ inputType: "range", firstHeader: "Прибытие", secondHeader: "Выезд", })

      .filter__dropdown
        +title({ tag: "h3", text: "Гости", })

        .filter__dropdown-container
          +dropdown({ 
            text: "Сколько гостей",
            hasButtons: true,
            options: [
              { text: "взрослые", group: "гости", },
              { text: "дети", group: "гости", },
              { text: "младенцы", },
            ],
          })

      .filter__button
        +button({ 
          href: "/mock-address/change-me", 
          text: "Подобрать номер",
          buttonType: "submit",
          style: "long",
        })